{
    "manifest_version": 2,
    "name": "Amazon Sample Tool",
    "version": "0.1",
    "author": "Fujino",
    "description": "Amazonサンプルツール",
    "browser_action": {
        "default_icon": "amazon.png",
        "default_title": "Amazon Sample Tool"
    },
    "permissions": ["tabs"],
    "background": {
        "scripts": ["background.js"],
        "presistent": false
    },
    "content_scripts": [{
        "matches": [
            "https://www.amazon.co.jp/*"
            ,"file:///C:/index.html"
        ],
        "js": [
            "content.js",
            "jquery-3.5.1.min.js"
        ]
    }]
}